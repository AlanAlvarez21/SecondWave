<%= turbo_frame_tag 'home' do %>
    <%= form_with url: products_path, method: :get do |form| %>
        
        <%# Render del input de busqueda por texto %>
        <%= form.text_field :query_text, placeholder: t('.query_text'), onchange: 'this.form.requestSubmit()', 
            value: params[:query_text], 
            class: 'w-full my-2 rounded-2xl border-gray-200'  
        %>

        <%# Render de los filtros  %>
        <div class='flex'>
            <%= form.number_field :min_price, placeholder: t('.min_price'), onChange: 'this.form.requestSubmit()
                ', value: params[:min_price], class: 'w-1/3 rounded-2xl border-gray-200' %>

            <%= form.number_field :max_price, placeholder: t('.max_price'), onChange: 'this.form.requestSubmit()
                ', value: params[:max_price], class: 'w-1/3 rounded-2xl border-gray-200 mx-2' %>

            <%= form.select :order_by, options_for_select(Product::ORDER_BY.keys.map{ |order| [t(".#{order}"), order] }, params[:order_by]), {},
                { onChange: 'this.form.requestSubmit()', value: params[:orderb_by], class: 'w-1/3 rounded-2xl border-gray-200' } %>
        </div>
    <% end %>

    <%# Render de las categorías %>
    <div class="flex gap-2 my-4 overflow-x-scroll"> 
        <%= link_to t('.all'), products_path, class: 'px-4 py-2 text-gray-600 bg-white rounded-2xl drop-shadow-sm hover:bg-gray-300' %>

        <%= render partial: 'category', collection: @categories %>
    </div>
    
     <%# Render de las categorías %>
    <%= turbo_frame_tag :products, class: 'products flex m-2'  do %>
        <%= turbo_frame_tag "products-#{@pagy.page}", class: 'products flex flex-col w-full sm:flex-row sm:flex-wrap' do %>
            <%= render partial: 'product', collection: @products %>
            <%= turbo_frame_tag "products-#{@pagy.next}", class: 'products', src:
            pagy_url_for(@pagy, @pagy.next), class: 'products flex flex-col w-full sm:flex-row sm:flex-wrap', loading: :lazy if @pagy.next %>
        <% end %>
    <% end %>
<% end %>
