<h1>Nuevo producto</h1>

<%= form_with model: @product do |form| %>
<div>
    <%= form.label :tittle %>
    <%= form.text_field :tittle %>
</div>

<div>
    <%= form.label :description %>
    <%= form.text_area :description %>
</div>

<div>
    <%= form.label :price %>
    <%= form.number_field :price %>
</div>

    <%= form.submit %>

<% end %>