<%= link_to product_path(product.id), class: 'product bg-white mb-2 rounded sm:w-[calc(33.33%_-_.5rem)] lg:w-[calc(25%_-_.5rem)]', 'data-turbo-frame': '_top' do %>
    <%= image_tag product.photo.attached? ? product.photo : 'placeholder.png', class: 'w-full h-60 object-cover' %>
<div class='m-2'>
    <h3 class='text-xl font-bold'><%= product.title %></h3>
    <p><%= product.price %>$</p>
    <p class='mt-2 text-sm text-gray-600'><%= product.description %></p>
</div>
<% end %>