<%= link_to product_path(product.id), class: 'product bg-white mb-2 rounded sm:w-1/3', 'data-turbo-frame': '_top' do %>
    <%= image_tag product.photo, class: 'w-full h-60 object-cover' if product.photo.attached? %>
<div class='m-2'>
    <h3 class='text-xl font-bold'><%= product.title %></h3>
    <p><%= product.price %>$</p>
    <p class='mt-2 text-sm text-gray-200'><%= product.description %></p>
</div>
<% end %>